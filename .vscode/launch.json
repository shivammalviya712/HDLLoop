{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Chainlit Debug: app_ui.py",
            "type": "debugpy",
            "request": "launch",
            "module": "chainlit",
            "args": [
                "run",
                "app_ui.py",
                "-w"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
